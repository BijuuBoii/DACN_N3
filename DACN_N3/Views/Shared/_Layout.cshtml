<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - DACN_N3</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
	<header>
		<div class="container">
			<div class="logo">
				<img src="/img/logo.png" alt="Logo">
			</div>
			<nav> 
				<ul style="width: 1080px">
					<li><a href="~/home/index">Trang Chủ</a></li>
					<li><a href="#">Phim Mới</a></li>
					<li><a href="#">Thể Loại</a></li>
					<li><a href="#">Top Phim</a></li>
					<li style="float:right;line-height:35px">
						<a href="~/Authority/Login">Đăng Nhập</a>
					</li>
					<li style="float:right;">
						<input class="form-control me-2" type="search" placeholder="Tìm kiếm" aria-label="Search">
					</li>
				</ul>
			</nav>
		</div>
	</header>
	<div class="container-fluid" style="background:#212529">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			<p>&copy; 2023 Website Xem Phim Online. All rights reserved.</p>
			<ul>
				<li><a href="#">Liên Hệ</a></li>
				<li><a href="#">Điều Khoản Sử Dụng</a></li>
				<li><a href="#">Chính Sách Bảo Mật</a></li>
			</ul>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
