@{
    ViewData["Title"] = "movieDetails";
}

<!-- Container chính -->
<div class="movie-details-container">

    <!-- Phần ảnh và nút mua vé -->
    <div class="movie-banner">
        <img src="https://th.bing.com/th/id/R.0d78be20ed7377dfe37bdc75828f87a8?rik=x2AAUQBoO%2bGFYg&pid=ImgRaw&r=0" width="100px" alt="Poster Phim" class="movie-image">
        <button class="buy-ticket-button">Mua Vé</button>
    </div>

    <!-- Phần thông tin chi tiết phim -->
    <div class="movie-info">
        <h1>Tên Phim</h1>
        <p class="description">
            Một bộ phim đầy cảm xúc về hành trình khám phá bản thân và cuộc sống...
        </p>
        <ul class="movie-details">
            <li><strong>Ngày Khởi Chiếu:</strong> 01-01-2024</li>
            <li><strong>Giới Hạn Độ Tuổi:</strong> 13+</li>
            <li><strong>Mức Độ Hài:</strong> Cao</li>
            <li><strong>Diễn Viên:</strong> Diễn Viên A, Diễn Viên B</li>
            <li><strong>Đạo Diễn:</strong> Đạo Diễn A</li>
            <li><strong>Nhà Sản Xuất:</strong> Nhà Sản Xuất B</li>
        </ul>
    </div>

    <!-- Phần trailer phim -->
    <div class="trailer-section">
        <h2>Trailer</h2>
        <iframe src="https://www.youtube.com/embed/trailer-id" frameborder="0" allowfullscreen></iframe>
    </div>

    <!-- Phần tin tức về phim -->
    <div class="news-section">
        <h2>Tin Tức Về Phim</h2>
        <ul class="news-list">
            <li><a href="#">Bài viết 1: Phim tạo cơn sốt phòng vé...</a></li>
            <li><a href="#">Bài viết 2: Hậu trường thú vị của bộ phim...</a></li>
            <li><a href="#">Bài viết 3: Phỏng vấn diễn viên chính...</a></li>
        </ul>
    </div>

    <!-- Phần đánh giá phim -->
    <div class="reviews-section">
        <h2>Đánh Giá Phim</h2>
        <div class="review">
            <strong>Người Dùng 1:</strong>
            <p>Phim rất hay, cảm xúc từ đầu đến cuối!</p>
        </div>
        <div class="review">
            <strong>Người Dùng 2:</strong>
            <p>Một trong những phim đáng xem nhất trong năm!</p>
        </div>
        <!-- Thêm đánh giá khác -->
    </div>

</div>