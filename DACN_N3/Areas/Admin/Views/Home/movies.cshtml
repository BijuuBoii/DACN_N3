@{
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-content">
    <section id="movies">
        <h2>Movies</h2>
        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Movie Name</th>
                    <th>Movie Info</th>
                    <th>Movie Link</th>
                    <th>Actions</th>
                    <th>Show/Hide</th>
                </tr>
            </thead>
            <tbody>
                <!-- Movie Row -->
                <tr>
                    <td>
                        <div class="image-wrapper">
                            <img src="image.jpg" alt="Movie Image">
                            <input type="file" accept="image/*">
                        </div>
                    </td>
                    <td><input type="text" value="Movie Title"></td>
                    <td>
                        <p>Thể loại</p>
                        <h5>kinh dị</h5>
                        <textarea>Some movie information...</textarea>
                    </td>
                    <td class="seasons">
                        <!-- Seasons List -->
                        <div class="season-list">
                            <div class="season">
                                <h4>Season 1</h4>
                                <div class="episode-list">
                                    <ol>
                                        <li><input type="url" placeholder="Episode Link"></li>
                                    </ol>
                                </div>
                                <button class="add-episode-btn">Add Episode</button>
                            </div>
                        </div>
                        <button class="add-season-btn">Add Season</button>
                    </td>
                    <td style="display:flex;gap:10px;">
                        <button class="save-btn">Save</button>
                        <button class="delete-btn">Delete</button>
                    </td>
                    <td>
                        <label class="switch">
                            <input type="checkbox" checked>
                            <span class="slider round"></span>
                        </label>
                    </td>
                </tr>
                <!-- Additional rows as needed -->
            </tbody>
        </table>
    </section>


</div>
