@{
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-content">
    <section id="settings">
        <h2>Cài đặt</h2>

        <!-- Cài đặt chung -->
        <div class="setting-section">
            <h3>Cài đặt chung</h3>
            <label>Tên website:</label>
            <input type="text" placeholder="Nhập tên website">

            <label>Logo:</label>
            <input type="file" accept="image/*">

            <label>Thông tin liên hệ:</label>
            <textarea placeholder="Nhập thông tin liên hệ"></textarea>

            <label>Ngôn ngữ website:</label>
            <select>
                <option value="en">Tiếng Anh</option>
                <option value="vi">Tiếng Việt</option>
            </select>
        </div>

        <!-- Cài đặt quản lý người dùng -->
        <div class="setting-section">
            <h3>Cài đặt quản lý người dùng</h3>
            <label>Vai trò người dùng:</label>
            <input type="text" placeholder="Nhập vai trò người dùng">

            <label>Đăng ký người dùng:</label>
            <input type="checkbox" checked> Bật đăng ký

            <label>Chính sách mật khẩu:</label>
            <input type="text" placeholder="Nhập yêu cầu mật khẩu">
        </div>

        <!-- Cài đặt quản lý phim -->
        <div class="setting-section">
            <h3>Cài đặt quản lý phim</h3>
            <label>Phê duyệt nội dung:</label>
            <input type="checkbox"> Yêu cầu quản trị viên phê duyệt nội dung mới

            <label>Chất lượng video mặc định:</label>
            <select>
                <option value="480p">480p</option>
                <option value="720p">720p</option>
                <option value="1080p">1080p</option>
            </select>
        </div>

        <!-- Cài đặt thông báo -->
        <div class="setting-section">
            <h3>Cài đặt thông báo</h3>
            <label>Thông báo email:</label>
            <input type="checkbox" checked> Bật

            <label>Thông báo đẩy:</label>
            <input type="checkbox"> Bật
        </div>

        <!-- Cài đặt thanh toán -->
        <div class="setting-section">
            <h3>Cài đặt thanh toán</h3>
            <label>Phương thức thanh toán:</label>
            <input type="text" placeholder="Nhập phương thức thanh toán">

            <label>Gói đăng ký:</label>
            <input type="text" placeholder="Nhập gói đăng ký">

            <label>Loại tiền tệ:</label>
            <select>
                <option value="USD">USD</option>
                <option value="VND">VND</option>
            </select>
        </div>

        <!-- Nút Lưu -->
        <button class="save-btn">Lưu tất cả cài đặt</button>
    </section>
</div>
